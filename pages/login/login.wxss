/* pages/login/login.wxss */
/* 页面背景 */
.bg {
  height: 100%;
  width: 100%;
  position: relative;
}

.bg-imgs {
  width: 100%;
  height: 100%;
}

/* 页面内容 */
.longin-view {
  width: 80%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.longin-logo {
  height: 400rpx;
  width: 400rpx;
  overflow: hidden;
  margin: auto;
}

.longin-slogan {
  font-size: 54rpx;
  text-align: center;
  margin-top: 30rpx;
  margin-bottom: 100rpx;
  font-weight: bold;
}

.username-btn {
  height: 100rpx;
  padding-right: 50rpx;
}

.btn-icon {
  height: 60rpx;
  width: 60rpx;
  border-radius: 10rpx;
  margin: 0 40rpx;
}

.btn-view {
  display: flex;
  align-items: center;
  background-color: rgb(255, 255, 255);
  border-radius: 200rpx;
  margin-bottom: 40rpx;
  border: 1px #f9f9f9 solid;
}

.submit-btn {
  margin-top: 160rpx;
  width: 80% !important;
  border-radius: 200rpx;
  height: 90rpx !important;
  line-height: 90rpx !important;
  padding: 0;
  color: #ffffff;
  background-color: #3b3b3e;
}

.submit-register {
  text-align: center;
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #5e76d0;
}


/* 全局 */
page {
  height: 100%;
  width: 100%;
}