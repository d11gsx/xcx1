/* pages/category/category.wxss */
/* 头部信息 */
.category-top-bg {
  height: 750rpx;
  width: 100%;
  overflow: hidden;
  position: absolute;
  top: 0;
  left: 0;
}

.category-h {
  margin-top: 400rpx;
  padding: 28rpx;
}

.category-title {
  font-size: 60rpx;
  font-weight: bold;
}

.category-desrc {
  margin: 40rpx auto;
  font-size: 26rpx;
}

/* 列表 */
.category-lists-flex {
  display: flex;
  margin-top: 80rpx;
  padding: 28rpx;
  justify-content: space-between;
  flex-wrap: wrap;
}

.category-lists-item {
  background-color: #f9f9f9;
  border-radius: 40rpx;
  height: 300rpx;
  padding: 44rpx;
  width: 35%;
  flex-shrink: 0;
  margin-bottom: 28rpx;
  position: relative;
}

.category-lists-title {
  font-size: 40rpx;
  font-weight: bold;
}

.category-lists-dsrc {
  margin-top: 20rpx;
  color: #ADADAD;
  font-size: 26rpx;
}

.category-lists-img {
  height: 110rpx;
  width: 110rpx;
  margin-top: 20rpx;
}

/* 文档列表 */
.category-doc-item {
  background-color: #f9f9f9;
  border-radius: 40rpx;
  height: 100rpx;
  line-height: 100rpx;
  padding: 44rpx;
  width: 35%;
  flex-shrink: 0;
  margin-bottom: 28rpx;
  position: relative;
  overflow: hidden;
}
.category-doc-title{
  font-size: 40rpx;
  font-weight: bold;
}
.category-doc-img{
  height: 180rpx;
  width: 180rpx;
  position: absolute;
  right: -60rpx;
  bottom: -60rpx;
  opacity: 0.65;
}


.fengrui-hr{
  width: 100%;
  height: 1px;
  margin-top: 60rpx;
  overflow: hidden;
}

